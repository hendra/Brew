source 'https://rubygems.org'

gem 'rails', '3.2.9'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'thin'
  gem 'pry-rails'
  gem 'debugger'
end

group :test do
  gem 'minitest-rails'
  gem 'minitest-rails-shoulda'
  gem 'minitest-matchers'
  gem 'database_cleaner'
  gem 'turn'
  gem 'factory_girl'
  gem 'faker'
end

group :production do
  gem 'unicorn'
end

gem 'jquery-rails'
gem 'slim-rails'
gem 'kaminari'
gem 'bootstrap-sass'
gem 'kaminari-bootstrap'
gem 'better_logging'
gem 'rails_config'
gem 'devise'
gem 'carrierwave'
gem 'mini_magick'
gem 'friendly_id'
gem 'squeel'
gem 'inherited_resources'
gem 'responders'
gem 'has_scope'
